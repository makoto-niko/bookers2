<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3"> 
    <%= render 'userinfo', user: @user,post_image: @post_image %>
</div>

        <div class="col-md-8 offset-md-1">
              <h2>Users</h2>
              <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           <% @users.each do |user| %>
           <tr>
               <td><%= image_tag @user.get_profile_image(100,100) %></td>
               <td><%= link_to user_path(user.id) do %>
                    <%= user.name %>
                    <% end %></td>
                    <% link_to "show",user_path %>
           </tr>
           <% end %>
      </tbody>
    </table>
</div>
</div>