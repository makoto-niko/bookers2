<div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
     <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
     </thead>
      
    <tbody>
      <tr>
          <% post_images.each do |post_image| %>
          <%= link_to post_image_path(post_image.id) do %>
          <%= image_tag post_image.get_image %>
          <% end %> </tr>
      <tr>%= image_tag post_image.user.get_profile_image(100,100) %></tr>
      <tr><%= user.title %></tr>
      <tr><%= user.body %></tr>
    </div>
    <% end %>
  </tbody>
</table>
</div>