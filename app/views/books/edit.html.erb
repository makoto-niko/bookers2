<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>
        </div>

        <%= link_to "show", book_path %> 
         |
        <%= link_to "back", books_path %> 
      </div>
    </div>
  </div>
</div>