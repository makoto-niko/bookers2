　<div class="container px-5 px-sm-0">
   <div class="row">
   <div class="col-md-3">     
     <table>
        <tr>
          <th>User info</th>
         <%= image_tag @user.get_profile_image(100,100) %>
          <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
        </tr>
        </table>
      <div class = "row">
    　 <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
         <i class="fa-solid fa-user-gear"></i>
         <% end %>
       </div>
       <h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

  </div>
       
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
           <% @books.each do |book| %>
             <td><%= image_tag @user.get_profile_image(100,100) %></td>
           <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %></td>
           
           <td><%= book.body %></td>
           <% end %>
      </tbody>
    </table>

</div>
</div>
</div>

