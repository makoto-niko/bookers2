<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   <script src="https://kit.fontawesome.com/99f9963ced.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
     <%= link_to "Bookers", root_path, class: "navbar-brand" %>
      <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-link text-light">
        <%= link_to user_path(current_user.id) do %>
        <i class="fa-solid fa-house"></i>Home
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to users_path do %>
        <i class="fa-solid fa-users"></i>Users
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to books_path do %>
        <i class="fa-solid fa-book-open"></i>Books
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa-solid fa-right-from-bracket"></i>Log out
        <% end %>
        </li>
        
      <% else %>
       <ul class="navbar-nav ml-auto">
        <li class="nav-link text-light">
        <%= link_to root_path do %>
        <i class="fa-solid fa-house"></i>Home
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to homes_about_path do %>
        <i class="fa-solid fa-link"></i>About
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to new_user_registration_path do %>
        <i class="fa-solid fa-user-plus"></i>Sign up
        <% end %>
        </li>
        
        <li class="nav-link text-light">
        <%= link_to new_user_session_path do %>
        <i class="fa-solid fa-right-to-bracket"></i>Log in
        <% end %>
        </li>
        <% end %>
   </header>
  <body>
    <%= yield %>
  </body>
  
  <footer>
    <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
  </footer>
  
</html>